<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"
    tools:context=".LoginClient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WelcomeBackLabel"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Welcome Back"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/greyYellow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GLMALabel"
            android:layout_marginLeft="20dp"
            android:text="Grave Locator Mobile Application"
            android:textSize="16sp"
            android:textColor="@color/greyYellow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/greyYellow"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/SignInText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/darkGreen"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SignInText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Please login to your account."
                android:textColor="@color/darkGreen"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/SignInEmail"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Enter Email"
                android:padding="8dp"
                android:textColor="@color/darkGreen" />

            <EditText
                android:id="@+id/SignInPassword"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/darkGreen" />

            <TextView
                android:id="@+id/ForgotPasswordRedirectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="Forgot Password?"
                android:textColor="@color/darkGreen"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SignInButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_greenbg"
                android:text="Sign In"
                android:textColor="@color/greyYellow"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/SignUpRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="Donâ€™t have an account? Sign Up"
                android:textColor="@color/darkGreen"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>